<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp">
        <LinearLayout
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/default_space">
            <ImageView
                android:layout_width="@dimen/icon_question"
                android:layout_height="@dimen/icon_question"
                android:layout_gravity="center"
                android:background="@drawable/ic_jkel"
                android:layout_marginVertical="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin Anda ?"
                style="@style/text_question_deteksi"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/default_space"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content2"
            android:layout_below="@id/content1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_yesno_question"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/default_space"
                android:layout_weight="50">
                <ImageView
                    android:id="@+id/jkel_pria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/icon_jkel_pria"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_jkel_pria"/>
                    <TextView
                        android:id="@+id/tv_jkel_pria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pria"
                        style="@style/label_option_question"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/default_space"
                android:layout_weight="50">
                <ImageView
                    android:id="@+id/jkel_wanita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_jkel_wanita"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_jkel_wanita" />

                    <TextView
                        android:id="@+id/tv_jkel_wanita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wanita"
                        style="@style/label_option_question"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp">
            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/custom_button_prev"
                android:padding="@dimen/default_space"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>