<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp">
        <LinearLayout
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/default_space">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/icon_question"
                android:layout_height="@dimen/icon_question"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:layout_marginVertical="50dp"/>
            <TextView
                android:id="@+id/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sebuah Pertanyaan ?"
                style="@style/text_question_deteksi"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/default_space"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content2"
            android:layout_below="@id/content1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_yesno_question"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/default_space"
                android:layout_weight="50">
                <ImageView
                    android:id="@+id/attribute_yes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/icon_yes"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_yes"/>
                    <TextView
                        android:id="@+id/label_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya"
                        style="@style/label_option_question"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/default_space"
                android:layout_weight="50">
                <ImageView
                    android:id="@+id/attribute_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_no"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_no" />

                    <TextView
                        android:id="@+id/label_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak"
                        style="@style/label_option_question"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp">
            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/custom_button_prev"
                android:padding="@dimen/default_space"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="32dp">
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/btn_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_yes_clicked"
                android:background="@drawable/custom_button_yes"
                android:padding="@dimen/default_space"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>