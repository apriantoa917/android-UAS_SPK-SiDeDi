<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_grey"
    android:id="@+id/background_hasil_deteksi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/default_space"
        >

        <ImageView
            android:id="@+id/icon_hasil_deteksi"
            android:layout_width="@dimen/icon_question"
            android:layout_height="@dimen/icon_question"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/default_space"
            android:background="@color/white" />

        <TextView
            android:id="@+id/greetings_deteksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="greetings_deteksi"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/default_space"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/default_space"/>
        <TextView
            android:id="@+id/kalimat_deteksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="kalimat_deteksi"
            android:layout_marginHorizontal="@dimen/default_space"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/default_space"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
</RelativeLayout>